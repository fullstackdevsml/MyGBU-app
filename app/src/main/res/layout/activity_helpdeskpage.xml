<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Helpdeskpage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_s"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_700"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:src="@drawable/back_button"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/helpdesk"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"> </TextView>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-235dp"
        android:text="@string/helpline_contacts"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_s"
        app:layout_constraintVertical_bias="0.065">

    </TextView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43"
        app:layout_constraintVertical_bias="0.05">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="General Enquiry"
                tools:ignore="HardcodedText" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/General_phn" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/admission_phn" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/phn_admin" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/ahdtfi" />

            <TextView
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/admin_phn2" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/chief_warden" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/warden_phn" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/dsa" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/dsa_phn" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/ict" />

            <TextView
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/ict_phn" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:id="@+id/frameLayout6"
        android:layout_width="364dp"
        android:layout_height="95dp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.057">

        <ImageView
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:src="@drawable/faq" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/faq"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:background="@drawable/nextbutton"
            tools:ignore="ContentDescription">

        </ImageButton>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>